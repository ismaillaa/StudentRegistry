@model List<Student>

@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Student List</h2>
    </div>
    <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>   &nbsp; Add new student
            </a>
            <br /> <br />
            <div class="">
                <form class="d-flex" method="get" asp-action="Index">
                    <input class="form-control me-sm-2" type="search" name="searchString" value="@Context.Request.Query["searchString"]" placeholder="Search">
                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
    </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td >@student.name</td>
                <td>@student.age</td>
                <td>@student.email</td>
                <td>@student.dateOfBirth.ToShortDateString()</td>
                <td>
                    <div class="w-75 btn-group " role="group">
                    <a asp-controller ="Student" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary mx-2" >
                            <i class="bi bi-pencil-square"></i> Edit
                    </a>
                            <a asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>